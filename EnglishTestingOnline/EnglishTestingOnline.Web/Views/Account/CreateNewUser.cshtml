@model EnglishTestingOnline.Web.Models.RegisterViewModel
@{
    ViewBag.Title = "CreateNewUser";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    @using (Html.BeginForm("CreateNewUser", "Account", FormMethod.Post))
                    { @Html.AntiForgeryToken()
                        @Html.ValidationSummary()
                        <form class="form-horizontal">
                            <div class="card">
                                <div class="card-header card-header-icon card-header-rose">
                                    <div class="card-icon">
                                        <i class="material-icons">assignment</i>
                                    </div>
                                    <h2 class="card-title ">Thêm mới câu hỏi</h2>
                                </div>
                                <div class="card-body">


                                    <div class="row">
                                        <label class="col-sm-2 col-form-label">Email</label>
                                        <div class="col-sm-7">
                                            <div class="form-group">
                                                @Html.TextBoxFor(model => model.Email, new { @class = "form-control" })
                                            </div>
                                        </div>
                                        <label class="col-sm-3 label-on-right text-danger">
                                            @Html.ValidationMessageFor(model => model.Email)
                                        </label>
                                    </div>
                                    <div class="row">
                                        <label class="col-sm-2 col-form-label">Password</label>
                                        <div class="col-sm-7">
                                            <div class="form-group">
                                                @Html.TextBoxFor(model => model.Password, new { @class = "form-control" })
                                            </div>
                                        </div>
                                        <label class="col-sm-3 label-on-right text-danger">
                                            @Html.ValidationMessageFor(model => model.Password)
                                        </label>
                                    </div>
                                    <div class="row">
                                        <label class="col-sm-2 col-form-label">Confirm Password</label>
                                        <div class="col-sm-7">
                                            <div class="form-group">
                                                @Html.TextBoxFor(model => model.ConfirmPassword, new { @class = "form-control" })
                                            </div>
                                        </div>
                                        <label class="col-sm-3 label-on-right text-danger">
                                            @Html.ValidationMessageFor(model => model.ConfirmPassword)
                                        </label>
                                    </div>

                                    <div class="row">
                                        <label class="col-sm-2 col-form-label">Roles</label>
                                        <div class="col-sm-7">
                                            <div class="form-group">
                                                @Html.DropDownListFor(model => model.Role, new SelectList(ViewBag.Roles, "Value","Text"), new { @class = "selectpicker", @title = "Cấp quyền", @data_style = "select-with-transition" })
                                            </div>
                                        </div>
                                        <label class="col-sm-3 label-on-right text-danger">
                                            @Html.ValidationMessageFor(model => model.ConfirmPassword)
                                        </label>
                                    </div>

                                    <div class="row">
                                        <label class="col-sm-2 col-form-label">User name</label>
                                        <div class="col-sm-7">
                                            <div class="form-group">
                                                @Html.TextBoxFor(model => model.Username, new { @class = "form-control" })
                                            </div>
                                        </div>
                                        <label class="col-sm-3 label-on-right text-danger">
                                            @Html.ValidationMessageFor(model => model.Username)
                                        </label>
                                    </div>
                                   

                                    <div class="row">
                                        <label class="col-sm-2 col-form-label">Phone</label>
                                        <div class="col-sm-7">
                                            <div class="form-group">
                                                @Html.TextBoxFor(model => model.Phone, new { @class = "form-control" })
                                            </div>
                                        </div>
                                        <label class="col-sm-3 label-on-right text-danger">
                                            @Html.ValidationMessageFor(model => model.Phone)
                                        </label>
                                    </div>

                                    <div class="row">
                                        <label class="col-sm-2 col-form-label">Address</label>
                                        <div class="col-sm-7">
                                            <div class="form-group">
                                                @Html.TextBoxFor(model => model.Address, new { @class = "form-control" })
                                            </div>
                                        </div>
                                        <label class="col-sm-3 label-on-right text-danger">
                                            @Html.ValidationMessageFor(model => model.Address)
                                        </label>
                                    </div>

                                    <div class="row">
                                        <label class="col-md-3"></label>
                                        <div class="card-footer ">
                                            <div class="row">
                                                <div class="col-md-9">
                                                    <button type="submit" class="btn btn-fill btn-rose">Submit</button>
                                                    
                                                </div>

                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>
                    }
                </div>
            </div>
        </div>
    </div>

</div>
