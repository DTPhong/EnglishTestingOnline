@model EnglishTestingOnline.Web.Infrastructure.Core.PaginationSet<EnglishTestingOnline.Web.Models.KyThiViewModel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header card-header-icon card-header-rose">
                        <div class="card-icon">
                            <i class="material-icons">assignment</i>
                        </div>
                        <h2 class="card-title ">Danh sách câu hỏi</h2>
                    </div>
                    <div class="card-body">
                        @if (TempData["message"] != null)
                        {

                            <div class="alert alert-success">
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                    <i class="material-icons">close</i>
                                </button>
                                <span>
                                    @TempData["message"]
                                </span>
                            </div>
                        }
                        @if (TempData["error"] != null)
                        {

                            <div class="alert alert-danger">
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                    <i class="material-icons">close</i>
                                </button>
                                <span>
                                    @TempData["error"]
                                </span>
                            </div>
                        }
                        <div class="toolbar">

                            <a href="/CauHoi/Add" class="btn btn-success">
                                <i class="fa fa-plus-circle"></i> Add new
                            </a>
                            @using (Html.BeginForm("Import", "CauHoi", FormMethod.Post, new { enctype = "multipart/form-data", @class = "btn btn-default" }))
                            {
                                <span class="btn-file">
                                    <span class="fileinput-new"><i class="fa fa-download"></i> Import</span>
                                    <input type="file" onchange="this.form.submit()" name="excelfile">
                                </span>
                            }
                            <a href="/CauHoi/Export" class="btn btn-warning">
                                <i class="fa fa-upload"></i> Export

                            </a>
                            <a href="" class="btn btn-danger" id="deleteMulti">
                                <i class="fa fa-trash"></i> Delete multi

                            </a>
                        </div>
                        <div class="table-responsive">
                            <form method="get" action="/CauHoi/Index">
                                <div class="input-group no-border">
                                    <input type="text" placeholder="Search here" id="txtKeyword" name="keyword" class="form-control">
                                    <button type="submit" class="btn btn-white btn-round btn-just-icon">
                                        <i class="material-icons">search</i>
                                        <div class="ripple-container"></div>
                                    </button>
                                </div>
                            </form>
                            <table class="table">
                                <thead class="text-primary">
                                    <tr>
                                        <th style="width: 5%">
                                            <input type="checkbox" id="selectAll" />
                                        </th>
                                        <th style="width: 15%">
                                            <h4>
                                                <b>ID</b>
                                            </h4>
                                        </th>
                                        <th style="width: 15%">
                                            <h4>
                                                <b>Tên kỳ thi</b>
                                            </h4>
                                        </th>
                                        <th style="width: 15%">
                                            <h4>
                                                <b>Ngày thi</b>
                                            </h4>
                                        </th>
                                        <th style="width: 5%">
                                            <h4><b>Sửa</b></h4>
                                        </th>
                                        <th style="width: 5%">
                                            <h4><b>Xóa</b></h4>
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.Items)
                                    {
                                        <tr>
                                            <td style="width: 5%">
                                                <input type="checkbox" value="@item.ID" name="item" />
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.ID)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.TenKyThi)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.NgayThi)
                                            </td>
                                            <td>
                                                <a href="/KyThi/Edit?id=@item.ID" class="btn btn-sm btn-info">
                                                    <i class="fa fa-edit"></i>
                                                </a>
                                            </td>
                                            <td>
                                                <a href="/KyThi/Delete?id=@item.ID" class="btn btn-sm btn-danger">
                                                    <i class="fa fa-trash"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>

                            </table>

                            @if (Model.Count > 0)
                            {

                                var from = 1 + 20 * (Model.Page - 1);
                                var to = from + Model.Count - 1;
                                if (Model.TotalPages > 1)
                                {
                                    // Create numeric links
                                    var startPageIndex = Math.Max(1, Model.Page - Model.MaxPage / 2);
                                    var endPageIndex = Math.Min(Model.TotalPages, Model.Page + Model.MaxPage / 2);
                                    <ul class="pagination">
                                        @if (Model.Page > 1)
                                        {
                                            <li class="page-item">
                                                <a class="page-link" href="?page=1" aria-label="Previous">
                                                    <span aria-hidden="true"><i class="fa fa-angle-double-left" aria-hidden="true"></i></span>
                                                </a>
                                            </li>
                                            <li class="page-item">
                                                <a class="page-link" href="?page=@(Model.Page-1)" aria-label="Previous">
                                                    <span aria-hidden="true"><i class="fa fa-angle-left" aria-hidden="true"></i></span>
                                                </a>
                                            </li>
                                        }

                                        @for (int i = startPageIndex; i <= endPageIndex; i++)
                                        {
                                            if (Model.Page == i)
                                            {
                                                <li class="page-item active"><a class="page-link" href="?page=@i" title="Trang @i">@i</a></li>
                                            }
                                            else
                                            {
                                                <li class="page-item"><a class="page-link" href="?page=@i" title="Trang @i">@i</a></li>
                                            }
                                        }
                                        @if (Model.Page < Model.TotalPages)
                                        {
                                            <li class="page-item">
                                                <a class="page-link" href="?page=@(Model.Page +1)" aria-label="Next">
                                                    <span aria-hidden="true"><i class="fa fa-angle-right" aria-hidden="true"></i></span>
                                                </a>
                                            </li>
                                            <li class="page-item">
                                                <a class="page-link" href="?page=@(Model.TotalPages)" aria-label="Next">
                                                    <span aria-hidden="true"><i class="fa fa-angle-double-right" aria-hidden="true"></i></span>
                                                </a>
                                            </li>
                                        }
                                    </ul>
                                }
                                <div class="dataTables_info" id="datatables_info" role="status" aria-live="polite">Từ câu hỏi thứ @from tới câu hỏi thứ @to</div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

