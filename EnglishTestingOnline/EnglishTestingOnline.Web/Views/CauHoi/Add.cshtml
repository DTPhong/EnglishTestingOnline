@model EnglishTestingOnline.Web.Models.CauHoiViewModel
@{
    ViewBag.Title = "Add";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    @using (Html.BeginForm("Add", "CauHoi", FormMethod.Post))
                    {
                        <form class="form-horizontal">
                            <div class="card">
                                <div class="card-header card-header-icon card-header-rose">
                                    <div class="card-icon">
                                        <i class="material-icons">assignment</i>
                                    </div>
                                    <h2 class="card-title ">Thêm mới câu hỏi</h2>
                                </div>
                                <div class="card-body">
                                    <div class="row">
                                        <label class="col-sm-2 col-form-label">Loại câu hỏi</label>
                                        <div class="col-sm-7">
                                            <div class="form-group has-default">
                                                @Html.DropDownListFor(model => model.LoaiCauHoi_ID, new SelectList(ViewBag.ListLoaiCauHoi, "ID", "NoiDung"), new { @class = "selectpicker", @title = "Chọn loại câu hỏi", @data_style = "select-with-transition" })
                                            </div>
                                        </div>
                                        <label class="col-sm-3 label-on-right text-danger">
                                            @Html.ValidationMessageFor(model => model.LoaiCauHoi_ID)
                                        </label>
                                    </div>
                                    <div class="row">
                                        <label class="col-sm-2 col-form-label">Chủ đề</label>
                                        <div class="col-sm-7">
                                            <div class="form-group">
                                                @Html.DropDownListFor(model => model.ChuDe_ID, new SelectList(ViewBag.ListChuDe, "ID", "TenChuDe"), new { @class = "selectpicker", @title = "Chọn chủ đề", @data_style = "select-with-transition" })
                                            </div>
                                        </div>
                                        <label class="col-sm-3 label-on-right text-danger">
                                            @Html.ValidationMessageFor(model => model.ChuDe_ID)
                                        </label>
                                    </div>
                                    <div class="row">
                                        <label class="col-sm-2 col-form-label">Bài đọc nghe</label>
                                        <div class="col-sm-7">
                                            <div class="form-group">
                                                @Html.DropDownListFor(model => model.BaiDocNghe_ID, new SelectList(ViewBag.ListBaiDocNghe, "ID", "NoiDung"), new { @class = "selectpicker", @title = "Chọn bài đọc/bài nghe", @data_style = "select-with-transition" })
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <label class="col-sm-2 col-form-label">Nội dung</label>
                                        <div class="col-sm-7">
                                            <div class="form-group">
                                                @Html.TextBoxFor(model => model.NoiDung, new { @class = "form-control" })
                                            </div>
                                        </div>
                                        <label class="col-sm-3 label-on-right text-danger">
                                            @Html.ValidationMessageFor(model => model.NoiDung)
                                        </label>
                                    </div>
                                    <div class="row">
                                        <label class="col-sm-2 col-form-label">Đáp án</label>
                                        <div class="col-sm-7">
                                            <div class="form-group">
                                                @Html.TextBoxFor(model => model.DapAn, new { @class = "form-control" })
                                            </div>
                                        </div>
                                        <label class="col-sm-3 label-on-right text-danger">
                                            @Html.ValidationMessageFor(model => model.DapAn)
                                        </label>
                                    </div>
                                    <div class="row">
                                        <label class="col-md-3"></label>
                                        <div class="card-footer ">
                                            <div class="row">
                                                <div class="col-md-9">
                                                    <button type="submit" class="btn btn-fill btn-rose">Submit</button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>
                    }
                </div>
            </div>
        </div>
    </div>

</div>
