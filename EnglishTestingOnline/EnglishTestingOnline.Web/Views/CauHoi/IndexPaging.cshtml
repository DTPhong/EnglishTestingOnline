@model EnglishTestingOnline.Web.Infrastructure.Core.PaginationSet<EnglishTestingOnline.Web.Models.CauHoiViewModel>
@{
    ViewBag.Title = "IndexPaging";
}

<h2>IndexPaging</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @*@Html.DisplayNameFor(model => model.Items.LoaiCauHoi_ID)*@
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.Items.BaiDocNghe_ID)*@
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.Items.ChuDe_ID)*@
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.Items.NoiDung)*@
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.Items.DapAn)*@
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.Items)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.LoaiCauHoi.NoiDung)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BaiDocNghe_ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ChuDe.TenChuDe)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NoiDung)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DapAn)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.ID })
            </td>
        </tr>
    }
</table>

@if (Model.TotalPages > 1)
{
    // Create numeric links
    var startPageIndex = Math.Max(1, Model.Page - Model.MaxPage / 2);
    var endPageIndex = Math.Min(Model.TotalPages, Model.Page + Model.MaxPage / 2);

    <div class="store-filter clearfix">
        <ul class="pagination">
            @if (Model.Page > 1)
            {
                <li>
                    <a href="?page=1">
                        <i class="fa fa-angle-double-left"></i>
                    </a>
                </li>
                <li>
                    <a href="?page=@(Model.Page-1)">
                        <i class="fa fa-angle-left"></i>
                    </a>
                </li>
            }

            @for (int i = startPageIndex; i <= endPageIndex; i++)
            {
                if (Model.Page == i)
                {
                    <li class="active"><a href="?page=@i" title="Trang @i">@i</a></li>
                }
                else
                {
                    <li><a href="?page=@i" title="Trang @i">@i</a></li>
                }
            }
            @if (Model.Page < Model.TotalPages)
            {
                <li>
                    <a href="?page=@(Model.Page+1)">
                        <i class="fa fa-angle-right"></i>
                    </a>
                </li>
                <li>
                    <a href="?page=@Model.TotalPages">
                        <i class="fa fa-angle-double-right"></i>
                    </a>
                </li>
            }
        </ul>
    </div>
}
