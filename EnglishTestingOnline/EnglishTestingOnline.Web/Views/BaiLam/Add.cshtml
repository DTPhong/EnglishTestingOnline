@model EnglishTestingOnline.Web.Models.BaiLamViewModel
@{
    ViewBag.Title = "Add";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header card-header-icon card-header-rose">
                            <div class="card-icon">
                                <i class="material-icons">assignment</i>
                            </div>
                            <h2 class="card-title ">Thêm mới bài đọc nghe</h2>
                        </div>
                        <div class="card-body">
                            @using (Html.BeginForm("Add", "BaiLam", FormMethod.Post))
                            {
                                <form class="form-horizontal">
                                    <div class="row">
                                        <label class="col-sm-2 col-form-label">Học viên</label>
                                        <div class="col-sm-7">
                                            <div class="form-group has-default">
                                                @Html.DropDownListFor(model => model.HocVien_ID, new SelectList(ViewBag.ListLoaiCauHoi, "ID", "NoiDung"), new { @class = "selectpicker", @title = "Chọn loại câu hỏi", @data_style = "select-with-transition" })
                                            </div>
                                        </div>
                                        <label class="col-sm-3 label-on-right text-danger">
                                            @Html.ValidationMessageFor(model => model.LoaiCauHoi_ID)
                                        </label>
                                    </div>
                                    <div class="row">
                                        <label class="col-sm-2 col-form-label">Loại câu hỏi</label>
                                        <div class="col-sm-7">
                                            <div class="form-group has-default">
                                                @Html.DropDownListFor(model => model.LoaiCauHoi_ID, new SelectList(ViewBag.ListLoaiCauHoi, "ID", "NoiDung"), new { @class = "selectpicker", @title = "Chọn loại câu hỏi", @data_style = "select-with-transition" })
                                            </div>
                                        </div>
                                        <label class="col-sm-3 label-on-right text-danger">
                                            @Html.ValidationMessageFor(model => model.LoaiCauHoi_ID)
                                        </label>
                                    </div>
                                    <div class="row">
                                        <label class="col-md-3 col-form-label">Điểm đọc</label>
                                        <div class="col-md-9">
                                            <div class="form-group">
                                                @Html.TextBoxFor(model => model.DiemDoc, new { @class = "form-control" })
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <label class="col-md-3 col-form-label">Điểm nghe</label>
                                        <div class="col-md-9">
                                            <div class="form-group">
                                                @Html.TextBoxFor(model => model.DiemNghe, new { @class = "form-control" })
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <label class="col-md-3 col-form-label">Điểm Nói</label>
                                        <div class="col-md-9">
                                            <div class="form-group">
                                                @Html.TextBoxFor(model => model.DiemNoi, new { @class = "form-control" })
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <label class="col-md-3 col-form-label">Điểm Viết</label>
                                        <div class="col-md-9">
                                            <div class="form-group">
                                                @Html.TextBoxFor(model => model.DiemViet, new { @class = "form-control" })
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <label class="col-md-3"></label>
                                        <div class="card-footer ">
                                            <div class="row">
                                                <div class="col-md-9">
                                                    <button type="submit" class="btn btn-fill btn-rose">Submit</button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </form>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
